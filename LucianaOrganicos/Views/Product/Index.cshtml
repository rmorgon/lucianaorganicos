@model LucianaOrganicos.Models.ProductModel
@{
    ViewBag.Title = "Produtos";
}

@section scripts{
    <script src="~/Content/js/product.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h4>Cadastro Produto</h4>
        </div>
    </div>
    <form id="productform" method="post" name="productform">
        <div class="row">

            <div class="col-sm-3">

                <label for="txtid">Código:</label>
                <input id="txtid" name="txtid" class="form-control" readonly value="@Model.Id" />

            </div>
            <div class="col-sm-6">
                <label for="txtproduct">Produto:</label>
                <input id="txtproduct" name="txtproduct" class="form-control" value="@Model.Product" />
            </div>
            <div class="col-sm-3">
                <label for="txtcategory">Categoria:</label>
                <input id="txtcategory" name="txtcategory" class="form-control" value="@Model.Category" />
            </div>
        </div>
        <div class="section panel-footer">
            <div class="row">
                <div class="col-sm-1">
                    <button type="submit" class="btn btn-success" id="btnSave" name="btnSave">Salvar</button>
                </div>
                <div class="col-sm-1">
                    <button type="reset" class="btn btn-warning" id="btnClear" name="btnClear">Limpar</button>
                </div>
                <div class="col-sm-1">
                    <button type="button" class="btn btn-danger" id="btnDelete" name="btnDelete">Excluir</button>
                </div>
                <div class="col-sm-2">
                    <button type="button" class="btn btn-toolbar" id="btnLoad" name="btnLoad">Carregar</button>
                </div>
            </div>
        </div>
    </form>
</div>
<div class="container">
    <table id="tblproduct" class="table table-sm table-bordered table-hover">
        <caption>Produtos Cadastrados</caption>
        <thead>
            <tr>
                <th data-field="id">Código</th>
                <th data-field="product">Produto</th>
                <th data-field="category">Categoria</th>
            </tr>
        </thead>
        <tbody>

        </tbody>
    </table>
</div>
<h2>Index</h2>

